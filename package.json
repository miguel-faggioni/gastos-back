{
  "name": "backend-Gestao_de_gastos",
  "version": "0.0.1",
  "main": "server.js",
  "scripts": {
    "prod": "npm run build && cd dist && cross-env NODE_ENV=PRODUCTION node Index.js",
    "dev": "nodemon",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'app/**/*.ts'",
    "prebuild": "ln -sfn database.aws.ts database.ts",
    "build": "npm run clean && tsc --outDir dist",
    "postbuild": "cp package.json dist/ && cp -r ssl/ dist/ && cp -r node_modules/ dist/",
    "deploy": "rsync -raz --progress dist/ suave:~/gestao-de-gastos/",
    "postdeploy": "ssh suave 'ln -sfn ~/letsencrypt/config/live/api.coisa.online/ ~/gestao-de-gastos/ssl/ && cd ~/gestao-de-gastos/ && yarn run:screen' && ln -sfn database.local.ts database.ts",
    "prerun:screen": "pkill screen || true",
    "run:screen": "screen -d -m node Index.js",
    "clean": "rimraf dist",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "migration:dev": "ts-node ./node_modules/.bin/typeorm migration:generate -c dev -n dev",
    "migration:dev:run": "ts-node ./node_modules/.bin/typeorm migration:run -c dev",
    "migration:prod": "ts-node ./node_modules/.bin/typeorm migration:generate -c prod -n prod",
    "migration:prod:run": "ts-node ./node_modules/.bin/typeorm migration:run -c prod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "keywords": [
    "node",
    "express",
    "typeorm",
    "typescript",
    "tslint",
    "JWT",
    "E2015"
  ],
  "author": "Miguel F.",
  "license": "AGPL-3.0",
  "dependencies": {
    "@sentry/node": "5.4.3",
    "@types/express": "^4.11.1",
    "@types/express-formidable": "^1.0.3",
    "@types/joi": "^13.6.1",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/method-override": "0.0.31",
    "@types/node": "^10.5.2",
    "body-parser": "^1.18.3",
    "camesine": "^1.0.1",
    "class-validator": "^0.9.1",
    "cluster": "^0.7.7",
    "cors": "^2.8.4",
    "excel4node": "^1.7.2",
    "express": "^4.16.4",
    "express-formidable": "^1.2.0",
    "express-jwt": "^5.3.1",
    "fs": "^0.0.1-security",
    "hash.js": "^1.1.7",
    "joi": "^14.0.0",
    "jsonwebtoken": "^8.2.0",
    "method-override": "^3.0.0",
    "morgan": "^1.9.0",
    "mysql": "^2.15.0",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "pg": "^7.8.0",
    "superagent": "^4.0.0-beta.5",
    "token-extractor": "^0.1.6",
    "ts-node": "^8.3.0",
    "typeorm": "^0.2.18",
    "typescript": "^3.1.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/cors": "^2.8.4",
    "@types/express-jwt": "0.0.40",
    "@types/mocha": "^5.2.4",
    "@types/morgan": "^1.7.35",
    "@types/rimraf": "2.0.2",
    "@types/superagent": "^3.5.7",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "husky": "^4.2.5",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "tslint": "^5.20.1"
  }
}
